<h2>Edit the product: {{name}}</h2>


<form action="/products/{{_id}}/edit" method="post">

  <label for="brand-input">Brand:</label>
  <input type="text" name="brand" id="brand-input" value="{{brand}}" />

  <label for="name-input">Name:</label>
  <input type="text" name="name" id="name-input" value="{{name}}" />

  <label for="weight-input">Weight:</label>
  <input type="text" name="weight" id="weight-input" value="{{weight}}" />

  <label for="price-input">Price:</label>
  <input type="number" name="price" id="price-input" value="{{price}}" />

  <label for="category-input">Category:</label>
  <input type="text" name="category" id="category-input" value="{{category}}" />

