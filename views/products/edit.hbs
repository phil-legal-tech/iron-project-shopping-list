<h2>Edit: {{brand}}, {{name}}</h2>

<form action="/products/{{_id}}/edit" method="post">
  <div class="form-group">
    <label for="brand-input">Brand:</label>
    <input type="text" name="brand" class="form-control" id="brand-input" value="{{brand}}" />
  </div>
  <div class="form-group">
    <label for="name-input">Name:</label>
    <input type="text" name="name" class="form-control" id="name-input" value="{{name}}" />
  </div>
  <div class="form-group">
    <label for="weight-input">Weight:</label>
    <input type="text" name="weight" class="form-control" id="weight-input" value="{{weight}}" />
  </div>
  <div class="form-group">
    <label for="price-input">Price:</label>
    <input type="number" name="price" class="form-control" id="price-input" value="{{price}}" />
  </div>
  <div class="form-group">
    <label for="category-input">Category:</label>
    <input type="text" name="category" class="form-control" id="category-input" value="{{category}}" />
  </div>
  <div>
    <button type="submit" class="btn btn-outline-dark">Save changes</button>
    <button type="button" class="btn btn-outline-dark"><a href="/products/{{this._id}}">Back To Details</a></button>
    <button type="button" class="btn btn-outline-dark"><a href="/products">Back to Products</a></button>
  </div>
</form>



